{
    "manifest_version": 3,
    "name": "Snipping Tool",
    "version": "1.0.0",
    "description": "ウェブページの範囲を選択してPNG画像として保存するスニッピングツール",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
